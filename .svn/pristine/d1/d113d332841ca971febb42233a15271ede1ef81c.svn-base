<!DOCTYPE HTML>
<html lang="ko">
<head>
<!-- ${NEXOS_META} -->
<!-- ${NEXOS_LIBRARY} ${} ${../../../} -->
<script src="../../../framework/js/misc/sha.js"></script>
<!-- PROGRAM CSS/JS -->
<link rel="stylesheet" href="css/changeuserpwdpopup.css" />
<script src="js/changeuserpwdpopup.js"></script>
</head>
<body>
    <div id="ctrPopupView" class="ctrPopup">
        <div class="ctrInner">
            <form>
                <div id="ctrChangePwdRules" style="padding: 10px; border: 2px solid #b1b7b1; border-radius: 5px; background-color: #f1f1f1; position: absolute; top: 64px; left: 315px; right: 6px; height: 92px;">
                    <span id="lblChangePwdRules" style="color: #673AB7; font-weight: bold; white-space: pre-line;"></span>
                </div>
                <div class="ctrGroupRow">
                    <div id="ctrChangePwdOverlay" style="padding: 10px; margin-bottom: 5px; border: 2px solid #fb4401; border-radius: 5px; background-color: #f1f1f1; width: 100%; box-sizing: border-box;">
                        <span id="lblChangePwdComments" style="color: red; font-weight: bold; white-space: pre-line;"></span>
                    </div>
                </div>
                <div class="ctrGroupRow">
                    <div id="lblUser_Id" class="lblNormal">사용자ID</div>
                    <input id="edtUser_Id" class="edtDisplay" type="text" autocomplete="username" disabled="disabled" style="width: 180px;" />
                </div>
                <div class="ctrGroupRow">
                    <div id="lblUser_Nm" class="lblNormal">사용자명</div>
                    <input id="edtUser_Nm" class="edtDisplay" type="text" autocomplete="" disabled="disabled" style="width: 180px;" />
                </div>
                <div class="ctrGroupRow">
                    <div id="lblUser_Pwd" class="lblKey">현재 비밀번호</div>
                    <input id="edtUser_Pwd" class="edtKey" type="password" autocomplete="current-password" style="width: 180px;" />
                </div>
                <div class="ctrGroupRow">
                    <div id="lblNew_User_Pwd1" class="lblKey">비밀번호 변경</div>
                    <input id="edtNew_User_Pwd1" class="edtKey" type="password" autocomplete="new-password" style="width: 180px;" />
                </div>
                <div class="ctrGroupRow">
                    <div id="lblNew_User_Pwd2" class="lblKey">비밀번호 확인</div>
                    <input id="edtNew_User_Pwd2" class="edtKey" type="password" autocomplete="new-password" style="width: 180px;" />
                </div>
            </form>
        </div>
    </div>
    <div id="ctrPopupActionBar" class="ctrPopupActionBar">
        <input id="btnOk" class="btnNormal" type="button" value="확인" style="width: 80px;" />
        <input id="btnCancel" class="btnNormal" type="button" value="취소" style="width: 80px;" />
    </div>
</body>
</html>
