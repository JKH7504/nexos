@Repository("CSC05010E0DAO")
public class CSC05010E0DAOImpl extends DaoSupport implements CSC05010E0DAO {

    // private final Logger logger = LoggerFactory.getLogger(CSC05010E0DAOImpl.class);

    final String PRORAM_ID             = "CSC05010E0";
    final String TABLE_NM_CMCODEGROUP  = "CMCODEGROUP";
    final String INSERT_ID_CMCODEGROUP = PRORAM_ID + ".INSERT_" + TABLE_NM_CMCODEGROUP;
    final String UPDATE_ID_CMCODEGROUP = PRORAM_ID + ".UPDATE_" + TABLE_NM_CMCODEGROUP;
    final String DELETE_ID_CMCODEGROUP = PRORAM_ID + ".DELETE_" + TABLE_NM_CMCODEGROUP;

    final String TABLE_NM_CMCODEATTR   = "CMCODEATTR";
    final String INSERT_ID_CMCODEATTR  = PRORAM_ID + ".INSERT_" + TABLE_NM_CMCODEATTR;
    final String UPDATE_ID_CMCODEATTR  = PRORAM_ID + ".UPDATE_" + TABLE_NM_CMCODEATTR;
    final String DELETE_ID_CMCODEATTR  = PRORAM_ID + ".DELETE_" + TABLE_NM_CMCODEATTR;

    final String TABLE_NM_CMCODE       = "CMCODE";
    final String DELETE_ID_CMCODE      = PRORAM_ID + ".DELETE_" + TABLE_NM_CMCODE;

    @SuppressWarnings("unchecked")
    @Override
    public void saveMaster(Map<String, Object> params) throws Exception {

        List<Map<String, Object>> dsSave = (List<Map<String, Object>>)params.get(Consts.PK_DS_MASTER);
        if (dsSave == null || dsSave.size() == 0) {
            return;
        }
        String userId = (String)params.get(Consts.PK_USER_ID);

        // 그룹코드 처리
        int dsCnt = dsSave.size();
        for (int i = 0; i < dsCnt; i++) {
            Map<String, Object> rowData = dsSave.get(i);
            rowData.put(Consts.PK_USER_ID, userId);

            String rowCrud = (String)rowData.get(Consts.PK_CRUD);
            if (Consts.DV_CRUD_C.equals(rowCrud)) {
                rowData.put(Consts.PK_REG_USER_ID, userId);
                rowData.put(Consts.PK_REG_DATETIME, Consts.DV_SYSDATE);
                insertSql(INSERT_ID_CMCODEGROUP, rowData);
            } else if (Consts.DV_CRUD_U.equals(rowCrud)) {
                updateSql(UPDATE_ID_CMCODEGROUP, rowData);
            } else if (Consts.DV_CRUD_D.equals(rowCrud)) {
                // 삭제일 경우 공통코드 먼저 삭제
                Map<String, Object> newRowData = new HashMap<String, Object>();
                newRowData.put("P_COMMON_GRP", rowData.get("P_COMMON_GRP"));
                deleteSql(DELETE_ID_CMCODE, newRowData);
                deleteSql(DELETE_ID_CMCODEATTR, newRowData);
                // 그룹코드 삭제
                deleteSql(DELETE_ID_CMCODEGROUP, rowData);
            }
        }
    }

    @SuppressWarnings("unchecked")
    @Override
    public void saveSub(Map<String, Object> params) throws Exception {

        List<Map<String, Object>> dsSave = (List<Map<String, Object>>)params.get(Consts.PK_DS_SUB);
        if (dsSave == null || dsSave.size() == 0) {
            return;
        }
        String userId = (String)params.get(Consts.PK_USER_ID);

        // 공통코드 처리
        int dsCnt = dsSave.size();
        for (int i = 0; i < dsCnt; i++) {
            Map<String, Object> rowData = dsSave.get(i);
            rowData.put(Consts.PK_USER_ID, userId);

            String rowCrud = (String)rowData.get(Consts.PK_CRUD);
            if (Consts.DV_CRUD_C.equals(rowCrud)) {
                rowData.put(Consts.PK_REG_USER_ID, userId);
                rowData.put(Consts.PK_REG_DATETIME, Consts.DV_SYSDATE);
                insertSql(INSERT_ID_CMCODEATTR, rowData);
            } else if (Consts.DV_CRUD_U.equals(rowCrud)) {
                updateSql(UPDATE_ID_CMCODEATTR, rowData);
            } else if (Consts.DV_CRUD_D.equals(rowCrud)) {
                deleteSql(DELETE_ID_CMCODEATTR, rowData);
            }
        }
    }

}
