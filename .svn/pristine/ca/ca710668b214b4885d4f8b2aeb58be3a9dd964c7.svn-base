/**
 * 닫기,취소버튼 클릭 이벤트
 */
function onCancel() {

    $NC.setPopupCloseAction($ND.C_CANCEL);
    $NC.onPopupClose();
}

/**
 * 저장,확인버튼 클릭 이벤트
 */
function onClose() {

    $NC.setPopupCloseAction($ND.C_OK);
    $NC.onPopupClose();
}

function onFuelPriceApply() {

    var DELIVERY_MONTH = $NC.getValue("#mtpDelivery_Month");
    if ($NC.isNull(DELIVERY_MONTH)) {
        alert($NC.getDisplayMsg("JS.LDC04010P0.003", "적용월을 입력하십시오."));
        $NC.setFocus("#mtpDelivery_Month");
        return;
    }

    var FUEL_PRICE = Number($NC.getValue("#edtFuel_Price"));
    if ($NC.isNull(FUEL_PRICE) || FUEL_PRICE <= 0) {
        alert($NC.getDisplayMsg("JS.LDC04010P0.004", "유류단가를 확인하십시오."));
        $NC.setFocus("#edtFuel_Price");
        return;
    }

    if (!confirm($NC.getDisplayMsg("JS.LDC04010P0.005", "유류단가 일괄적용하시겠습니까?"))) {
        return;
    }

    $NC.serviceCall("/LDC04010E0/setFuelPriceTotalApply.do", {
        P_QUERY_ID: "LD_APPLY_FUEL_PRICE_T1",
        P_QUERY_PARAMS: {
            P_CENTER_CD: $NC.G_VAR.G_PARAMETER.P_CENTER_CD,
            P_DELIVERY_MONTH: DELIVERY_MONTH,
            P_FUEL_PRICE: FUEL_PRICE,
            P_USER_ID: $NC.G_USERINFO.USER_ID
        }
    }, function() {
        onClose();
    });
}