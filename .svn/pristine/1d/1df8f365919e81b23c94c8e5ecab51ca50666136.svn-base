/**
 * 조회
 */
function _Inquiry() {

    // 조회시 전역 변수 값 초기화
    $NC.setInitGridVar(G_GRDMASTER);

    // 파라메터 세팅
    G_GRDMASTER.queryParams = {
        P_BU_CD: $NC.G_VAR.G_PARAMETER.P_BU_CD
    };
    // 데이터 조회
    $NC.serviceCall("/EDS01010E0/getDataSet.do", $NC.getGridParams(G_GRDMASTER), onGetMaster);
}

