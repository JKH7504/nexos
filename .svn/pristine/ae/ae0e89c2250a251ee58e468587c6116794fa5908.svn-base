.ctrLargeDisplay .lblKey, /*
*/ .ctrLargeDisplay .lblSpecial, /*
*/ .ctrLargeDisplay .lblNormal {
    width: 98px;
}

.ctrLargeDisplay .lblNormal {
    font-weight: bold;
}

.ctrLargeDisplay .edtDisplay {
    background-color: #f1f1f1 !important;
    font-size: 10pt;
    font-weight: bold;
    height: 24px;
}

.ctrLargeDisplay .styImportant {
    font-size: 10pt !important;
}

.ctrLargeDisplay .styLarge {
    padding-bottom: 0.15em; /* 가운데 오도록 강제 조정 */
    font-family: sans-serif;
    font-size: 18pt;
    height: 40px;
}

.ctrLargeDisplay .styLargeQty {
    padding-bottom: 0.15em; /* 가운데 오도록 강제 조정 */
    font-family: sans-serif;
    font-size: 30pt;
    font-weight: bold;
    height: 60px;
}

.ctrLargeDisplay .styShelfNo {
    padding-bottom: 0.15em; /* 가운데 오도록 강제 조정 */
    font-family: sans-serif;
    font-size: 100pt;
    color: #ff5000 !important;
    text-align: center;
    text-shadow: 2px 2px 2px #7d7d7d;
    width: 100%;
    height: 130px;
}

.ctrLargeDisplay table.ctrInner {
    width: 100%;
}

.ctrLargeDisplay table.ctrInner>tbody>tr>td {
    padding: 2px 2px 2px 0;
}

.ctrBlockButton {
    display: inline-block;
    vertical-align: middle;
    overflow: auto hidden;
    min-height: 42px;
}

.ctrBlockButton input {
    margin-left: 10px;
}

.ctrBlockButton input:nth-child(1) {
    margin-left: 0;
}

table.ctrBlock {
    border-collapse: separate;
    border-spacing: 5px;
    text-align: center;
}

table.ctrBlock>tbody>tr>td {
    border-width: 1px;
}

.ctrBlock .shelf {
    /*padding: 5px;*/
    position: relative;
    box-sizing: border-box;
    font-weight: bold;
    overflow: hidden;
    height: 100%;
}

.ctrBlock .shelf .no {
    background: #e6e6e6;
    border-bottom-width: 1px;
    font-family: sans-serif;
    font-size: 12pt;
    color: #585858;
    height: 22px;
}

.ctrBlock .shelf .rQty {
    font-family: sans-serif;
    font-size: 30pt;
}

.ctrBlock .shelf .tQty {
    background: #eeeeee;
}

.ctrBlock .active .shelf .no {
    background: #ea6e11;
    border-bottom-color: #c5661f;
    color: #ffffff;
    text-shadow: 1px 0 2px rgba(0, 0, 0, 0.9);
}

.ctrBlock .active .shelf .rQty {
    background: #e6ad52;
    color: #ffffff;
    text-shadow: 1px 0 1px rgba(0, 0, 0, 0.9);
}

.ctrBlock .inactive .shelf .no {
    background: #dadada;
    color: #8c8c8c;
}

.ctrBlock .inactive .shelf .rQty {
    background: #eeeeee;
}

.styScan, /*
*/ .styAction {
    height: 40px;
}

.styScan {
    font-size: 20pt;
    font-weight: bold;
}

.styAction {
    font-family: sans-serif;
    font-size: 16pt;
}

.ctrProgressBar {
    display: inline-block;
    position: relative;
    background: #f1f1f1;
    border-width: 1px;
    vertical-align: middle;
    width: 60%;
    height: 32px;
}

.ctrProgressShape {
    position: absolute;
    background: rgba(244, 83, 30, 0.85);
    left: 0;
    top: 0;
    width: 0%;
    height: 100%;
}

.ctrProgressValue {
    position: absolute;
    padding: 5px;
    font-family: sans-serif;
    font-size: 14pt;
    font-weight: bold;
    text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.85);
    text-align: center;
    line-height: 20px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    z-index: 1;
}